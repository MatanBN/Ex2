<Window x:Class="Views.Single_Player"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Views"
        xmlns:controls="clr-namespace:Views"
        
        mc:Ignorable="d"
        Title="Single_Player" Height="300" Width="300"
        x:Name="SinglePlayerWindow">
    <Grid RenderTransformOrigin="0.504,0.53">
        <controls:StartGame x:Name="gameProperties" Margin="0,0,0,160" MazeName="{Binding MazeName, Mode=TwoWay}" Rows="{Binding MazeRows, Mode=TwoWay}" Cols="{Binding MazeCols, Mode=TwoWay}"/>
        <Button x:Name="startBtn" Content="Start Game" HorizontalAlignment="Left" Height="32" Margin="92,109,0,0" VerticalAlignment="Top" Width="100"  Click="btnStart_Click"/>

    </Grid>
</Window>
