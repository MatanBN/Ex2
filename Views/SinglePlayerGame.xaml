<Window x:Class="Views.SinglePlayerGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Views"
        xmlns:controls="clr-namespace:Views"
        mc:Ignorable="d"
        Title="{Binding MazeName}" Height="600" Width="650" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="restartBtn" Content="Restart game" HorizontalAlignment="Left" Height="37"  VerticalAlignment="Top" Width="100" Margin="40,26,0,0"/>
        <Button x:Name="solveBtn" Content="Solve maze" HorizontalAlignment="Center" Height="37" VerticalAlignment="Top" Width="100" Margin="274,26,268,0"/>
        <Button x:Name="mainBtn" Content="Main menu" HorizontalAlignment="Right" Height="37" VerticalAlignment="Top" Width="100" Margin="0,26,40,0"/>
        <controls:MazeBoard x:Name="mazeBoard" Rows="5" Margin="10,76,10,10" Grid.Row="1"/>
    </Grid>
</Window>
